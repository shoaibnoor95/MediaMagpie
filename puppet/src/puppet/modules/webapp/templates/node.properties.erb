# Beware: All properties which starts with 'system.property.' will be added into Systemproperties AND will be spring beans!
#

system.property.persistent.unit=<%= scope.function_hiera(["persistent.unit"]) %>
system.property.server.address=<%= scope.function_hiera(["server.address"]) %>

######################
# DB settings
######################
db.dataSourceClassName=com.mysql.jdbc.jdbc2.optional.MysqlDataSource
db.url=jdbc:mysql://localhost/<%= scope.function_hiera(["db.schema.name"])%>?autoReconnect=true
db.user=<%= scope.function_hiera(["db.app.user"]) %>
db.password=<%= scope.function_hiera(["db.app.pw"]) %>

######################
# Jetty specific stuff
######################
webapp.port.http=<%= scope.function_hiera(["port.http"]) %>
webapp.port.https=<%= scope.function_hiera(["port.https"]) %>
webapp.context.path=/

######################
# EMail service settings
######################
mail.enabled=true
mail.hostName=<%= scope.function_hiera(["mail.hostName"]) %>
mail.port=<%= scope.function_hiera(["mail.port"], "25") %>
mail.userName=<%= scope.function_hiera(["mail.userName"], []) %>
mail.password=<%= scope.function_hiera(["mail.password"], "") %>

