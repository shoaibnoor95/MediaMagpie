# DB-Selection
# define one of hsql-memory, hsql-file, mysql
system.property.persistent.unit=<%= scope.function_hiera(["persistent.unit"]) %>
#system.property.server.address=127.0.0.1:8088

######################
# Jetty specific stuff
######################
webapp.port.http=<%= scope.function_hiera(["port.http"]) %>
webapp.port.https=<%= scope.function_hiera(["port.https"]) %>
webapp.context.path=/

######################
# EMail service settings
######################
mail.enabled=true
mail.hostName=<%= scope.function_hiera(["mail.hostName"]) %>
mail.port=<%= scope.function_hiera(["mail.port"], "25") %>
mail.userName=<%= scope.function_hiera(["mail.userName"], []) %>
mail.password=<%= scope.function_hiera(["mail.password"], "") %>

