<!-- See also: http://wiki.sitemesh.org/display/sitemesh/SiteMesh+Adept+in+10+Minutes -->
<decorators defaultdir="/WEB-INF/jsp/decorators">
    <excludes>
        <!-- used to test css/java script etc. -->
        <pattern>/mockstatic</pattern>
        <pattern>*ajax*</pattern>
        <!-- for cooliris support -->
        <pattern>*crossdomain.xml</pattern>
        <pattern>*rss</pattern>
        <pattern>/footer</pattern>
    </excludes>
    <decorator name="main" page="main.jsp">
          <pattern>/*</pattern>
    </decorator>
</decorators>