<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">


	<!--  configure the context and configuration location -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/spring/web-application.xml</param-value>
	</context-param> 
<!-- 	<context-param>
		<param-name>org.mortbay.jetty.servlet.SessionCookie</param-name>
		<param-value>WORKSHOPSESSIONID</param-value>
	</context-param>
	<context-param>
		<param-name>org.mortbay.jetty.servlet.SessionURL</param-name>
		<param-value>workshopsessionid</param-value>
	</context-param>-->

	<!-- Map static resources to the default servlet -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/static/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>mvc-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- <load-on-startup>1</load-on-startup>-->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value></param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- rwe: web-service is currently not supported<servlet>
		<servlet-name>spring-ws</servlet-name>
		<servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
