	</servlet-mapping>-->


	<!-- FILTER and it's mapping -->
    
	<!-- Reads request input using UTF-8 encoding -->
	<filter>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Wraps the request within a persitence transaction -->
	<filter>
		<filter-name>PersistenceFilter</filter-name>
		<filter-class>de.wehner.mediamagpie.conductor.webapp.filter.PersistenceFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PersistenceFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<!-- Enables Spring Security -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

    <!-- Sitemesh (important to place this AFTER spring security!) -->
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

	<!--
		Auto-login filter for deploy.mode=local <filter>
		<filter-name>AutoLoginFilter</filter-name>
		<filter-class>wehner.workshop.webapp.filter.AutoLoginFilter</filter-class>
		</filter> <filter-mapping> <filter-name>AutoLoginFilter</filter-name>
		<url-pattern>*</url-pattern> </filter-mapping>
	-->

	<!--    LISTENER    -->
	<listener>
		<listener-class>de.wehner.mediamagpie.conductor.ContextListener</listener-class>
	</listener>

</web-app>