<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="mysql" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="mmagpie" />
			<property name="hibernate.connection.password" value="mmagpie" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/mediamagpie?autoReconnect=true" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="validate" /> -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.autocommit" value="false" />
			<property name="hibernate.ejb.naming_strategy" value="de.wehner.mediamagpie.conductor.persistence.DatabaseNamingStrategy" />
			<property name="hibernate.jdbc.batch_size" value="1" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.search.default.directory_provider" value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="target/runtime/lucene" />

		</properties>
	</persistence-unit>

	<persistence-unit name="mysql-migration" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="mbutler" />
			<property name="hibernate.connection.password" value="mbutler" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/mediabutler?autoReconnect=true" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="validate" /> -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.autocommit" value="false" />
			<property name="hibernate.ejb.naming_strategy" value="de.wehner.mediamagpie.conductor.persistence.DatabaseNamingStrategy" />
			<property name="hibernate.jdbc.batch_size" value="1" />
			<property name="hibernate.show_sql" value="false" />

			<property name="hibernate.search.default.directory_provider" value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="target/runtime/lucene" />

		</properties>
	</persistence-unit>

	<persistence-unit name="mysql-it" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="rwe" />
			<property name="hibernate.connection.password" value="rwe" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/mediabutler_it?autoReconnect=true" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.autocommit" value="false" />
			<property name="hibernate.ejb.naming_strategy" value="de.wehner.mediamagpie.conductor.persistence.DatabaseNamingStrategy" />
			<property name="hibernate.jdbc.batch_size" value="1" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.search.default.directory_provider" value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="target/runtime/lucene" />
		</properties>
	</persistence-unit>

	<persistence-unit name="hsql-memory" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:Test" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<!-- <property name="hibernate.delegateProperties" value="name=sa" /> -->
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<!-- <property name="hibernate.max_fetch_depth" value="3" /> <property name="hibernate.jdbc.batch_size" 
				value="1" / > -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<!-- <property name="hibernate.show_sql" value="true" /> -->
			<property name="hibernate.search.default.directory_provider" value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="target/runtime/lucene_test" />
		</properties>
	</persistence-unit>

	<persistence-unit name="hsql-file" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.delegateProperties" value="name=sa" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:file:target/database/hsqlDB" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.jdbc.batch_size" value="1" />
			<property name="hibernate.search.default.directory_provider" value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="target/runtime/lucene" />
		</properties>
	</persistence-unit>
</persistence>